<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_push_height"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <View
            android:id="@+id/push_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_push_bg_height"
            android:background="@drawable/bg_item_push" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/pushPic"
            android:layout_width="@dimen/push_pic_size"
            android:layout_height="@dimen/push_pic_size"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/push_pic_horizontal_margin"
            card_view:qmui_border_width="0dp"
            android:background="@color/colorText_Icon"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/pushTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/push_bg"
            android:layout_marginBottom="6dp"
            android:layout_toEndOf="@id/pushPic"
            android:maxWidth="@dimen/push_title_max_width"
            android:maxLines="1"
            android:text="Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pushRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/pushTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/push_text_horizontal_margin"
            android:text="Unread"
            android:textColor="@color/pushRead"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/pushDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/push_bg"
            android:layout_alignEnd="@id/pushRead"
            android:layout_marginTop="2dp"
            android:text="Date"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/pushText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/pushDate"
            android:layout_toStartOf="@id/pushDate"
            android:layout_toEndOf="@id/pushPic"
            android:maxLines="1"
            android:text="Content"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
