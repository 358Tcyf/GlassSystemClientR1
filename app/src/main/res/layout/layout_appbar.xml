<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIAppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:background="?attr/colorPrimaryDark"
    android:fitsSystemWindows="true">

    <com.qmuiteam.qmui.widget.QMUICollapsingTopBarLayout
        android:id="@+id/collapsing_topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="?attr/qmui_topbar_height"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:qmui_collapsedTitleGravity="center"
        app:qmui_contentScrim="?attr/colorPrimaryDark"
        app:qmui_expandedTitleGravity="left|bottom"
        app:qmui_expandedTitleMarginBottom="20dp"
        app:qmui_expandedTitleMarginStart="30dp"
        app:qmui_statusBarScrim="?attr/colorPrimaryDark"
        app:qmui_title="">

        <me.panpf.sketch.SketchImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            android:scaleType="centerCrop" />


        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/qmui_topbar_height"
            android:fitsSystemWindows="true"
            app:qmui_layout_collapseMode="pin"
            app:qmui_topbar_bg_color="@color/qmui_config_color_transparent"
            app:qmui_topbar_need_separator="false" />
    </com.qmuiteam.qmui.widget.QMUICollapsingTopBarLayout>
</com.qmuiteam.qmui.widget.QMUIAppBarLayout>

