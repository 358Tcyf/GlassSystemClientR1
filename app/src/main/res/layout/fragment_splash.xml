<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="@dimen/lottie_view_size"
        android:layout_height="@dimen/lottie_view_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lottie_view_margin"
        android:background="@color/qmui_config_color_transparent"
        app:lottie_fileName="data-dashboard.json"
        app:lottie_loop="false" />

    <TextView
        android:id="@+id/loginBtn"
        android:layout_width="@dimen/splash_login_width"
        android:layout_height="@dimen/splash_login_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/splash_login_vertical_margin"
        android:background="@drawable/bg_splash_text"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/colorText_Icon"
        android:textSize="@dimen/splash_login_text_size"
        android:visibility="invisible" />


</RelativeLayout>