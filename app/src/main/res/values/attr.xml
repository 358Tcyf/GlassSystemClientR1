<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="colorPrimary" format="color" />
    <attr name="colorPrimaryDark" format="color" />
    <attr name="colorAccent" format="color" />
    <attr name="colorText_Icon" format="color" />
    <attr name="colorPrimaryText" format="color" />
    <attr name="colorSecondaryText" format="color" />
    <attr name="colorDivider" format="color" />


    <declare-styleable name="CellImageView">
        <attr name="meow_imageview_useColor" format="boolean" />
        <attr name="meow_imageview_isBitmap" format="boolean" />
        <attr name="meow_imageview_resource" format="reference" />
        <attr name="meow_imageview_color" format="color" />
        <attr name="meow_imageview_size" format="dimension" />
        <attr name="meow_imageview_isAction" format="boolean" />
        <attr name="meow_imageview_actionBackgroundAlpha" format="boolean" />
        <attr name="meow_imageview_changeSize" format="boolean" />
        <attr name="meow_imageview_fitImage" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BottomNavigation">
        <attr name="mbn_defaultIconColor" format="color" />
        <attr name="mbn_selectedIconColor" format="color" />
        <attr name="mbn_backgroundBottomColor" format="color" />
        <attr name="mbn_countTextColor" format="color" />
        <attr name="mbn_countBackgroundColor" format="color" />
        <attr name="mbn_countTypeface" format="string" />
        <attr name="mbn_rippleColor" format="color" />
        <attr name="mbn_shadowColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer"/>
        <attr name="animDuration" format="integer"/>
        <attr name="contentTextSize" format="dimension"/>
        <attr name="contentTextColor" format="color"/>
        <attr name="contentLineSpacingMultiplier" format="float"/>
        <attr name="expandDrawable" format="reference"/>
        <attr name="expandText" format="string"/>
        <attr name="collapseDrawable" format="reference"/>
        <attr name="collapseText" format="string"/>
        <attr name="expandCollapseTextColor" format="color"/>
        <attr name="DrawableAndTextGravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>
</resources>